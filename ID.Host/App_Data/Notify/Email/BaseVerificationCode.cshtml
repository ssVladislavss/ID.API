<table style="width: 100%; background: #cccccc; border-collapse: collapse">
    <tbody>
        <tr>
            <td style="height: 20px"></td>
            <td style="height: 20px"></td>
            <td style="height: 20px"></td>
        </tr>
        <tr>
            <td></td>
            <td style="width: 800px; background: #ffffff">
                <table style="width: 100%; border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td style="padding: 5px 0 5px 30px;">
                                <img src="@Model.Client?.LogoUri" />
                            </td>
                            <td></td>
                            <td style="padding: 5px 30px 5px 0; text-align: right">
                                @if (!string.IsNullOrEmpty(Model.Client?.LogoUri))
                                {
                                    <a target="_blank" href="@Model.Client.ClientUri">
                                        <img style="max-height: 60px; width: auto; max-width: 120px" src="@Model.Client.LogoUri" />
                                   </a>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table style="width: 100%; border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td style="width: 15px"></td>
                            <td style="border-bottom: 2px #228abb solid"></td>
                            <td style="width: 15px"></td>
                        </tr>
                    </tbody>
                </table>
                <table style="width: 100%; border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td colspan="3" style="padding: 10px 40px 10px 40px; font-family: 'Open Sans', 'Segoe UI', 'Arial', sans-serif; color: #444444;">
                                <h3 style="margin-bottom: 10px; font-size: 16px;">Здравствуйте, @Model.Email </h3>
                                <p style="margin-bottom: 10px; font-size: 14px; color: #444444;">Ваш код подтверждения: <b>@Model.VerificationCode</b></p>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table style="width: 100%; border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td style="width: 15px"></td>
                            <td style="border-bottom: 2px #228abb solid"></td>
                            <td style="width: 15px"></td>
                        </tr>
                    </tbody>
                </table>
                <table style="width: 100%; border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td style="padding: 19px 15px 15px 30px;">
                                <img src="@Model.Client?.LogoUri" />
                            </td>
                            <td style="padding: 5px 30px 5px 15px; text-align: right">
                                <span style="font-size: 12px; font-family: sans-serif; color: #121212;">© @DateTime.Now.Year, «<a href="#" style="color: #228abb;">Сервис идинтификации</a>». Все права защищены.<br /><b>Данное письмо было отправлено автоматической системой. Пожалуйста, не отвечайте на это письмо.</b></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td></td>
        </tr>
        <tr>
            <td style="height: 20px"></td>
            <td style="height: 20px"></td>
            <td style="height: 20px"></td>
        </tr>
    </tbody>
</table>
